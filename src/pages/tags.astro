---
import BaseLayout from '../layouts/BaseLayout.astro'

const allPosts = await Astro.glob('./posts/*.md')
const nonDraftPosts = allPosts.filter((p) => !p.frontmatter.draft)

const uniqueTags = [
  ...new Set(nonDraftPosts.map((post) => post.frontmatter.tags).flat())
]
---

<BaseLayout title="Tags">
  <main>
    <h1>Tags</h1>
    <ul>
      {
        uniqueTags.map((tag) => (
          <li>
            <a href={`/tags/${tag}`}>{tag}</a>
          </li>
        ))
      }
    </ul>
  </main>
</BaseLayout>
