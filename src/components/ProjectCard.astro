---
const {markdownData} = Astro.props
---

<div class="card-wrapper">
  <div class="flow">
    <h3 class="card-header">{markdownData.frontmatter.title}</h3>
    <p>{markdownData.frontmatter.description}</p>
    <a href={markdownData.url}>Read more!</a>
  </div>
  <img alt=`${markdownData.frontmatter.title} article image` src={markdownData.frontmatter.image}/>
</div>

<style>

  img {
    height: 100px;
  }

  @media (min-width: 550px) {
    img {
      height: 200px;
    }
  }



  .card-wrapper {
    border: 1px solid #8c8c8c;
    border-radius: 5px;
    background-color: #f9f9f9;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 500px;
    margin: 0;
  }

  p {
    max-width: 20ch;
  }

  .card-header {
    margin-top: 0;
  }
</style>
